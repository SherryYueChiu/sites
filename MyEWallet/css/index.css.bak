html,
body,
#app {
	width: 100%;
	height: 100%;
}

#app {
	background-color: #C9CCD0;
	position: fixed;
	left: 0;
	top: 0;
	z-index: 0;
	overflow-y: scroll;
	font-weight: bolder;
}

.modal-title {
	color: #237AEA;
	font-weight: bolder;
}

.modal-body {
	background-color: #E5E7EA;
	font-weight: bolder;
}

.tag h5 {
    color: #1F1F20;
	font-weight: bolder;
}

.tabs * {
    font-color: #46484C;
	font-weight: bolder;
}

.rounded {
    border-radius: 1em!important;
}

.floatingBtn {
	position: fixed;
	width: 60px;
	height: 60px;
	bottom: 40px;
	right: 40px;
	background-color: #E8E9EB !important;
	color: #101412 !important;
	font-weight: bolder !important;
	border-radius: 50px;
	text-align: center;
	box-shadow: 2px 2px 3px #999;
	z-index: 99;
}

.barcode, #einvoiceImg>*, #memberImg>* {
	width: 100%;
	height: 10em;
}

.member {
	opacity: 0.1;
}

.bold {
	font-weight: bolder;
}

.bgColor1 {
	background-color: #1F1F20;
}

.color1 {
	color: #1F1F20;
}

.bgColor2 {
	background-color: #333333;
}

.color2 {
	color: #333333;
}

.bgColor3 {
	background-color: #FCFCFC;
}

.color3 {
	color: #FCFCFC;
}

.bgColor4 {
	background-color: #7B7B7B;
}

.color4 {
	color: #7B7B7B;
}

.bgColor5 {
	background-color: #5C5C5C;
}

.color5 {
	color: #5C5C5C;
}

.scannerImg {
	position: fixed;
	left: 0;
	top: 100%;
	width: 100%;
	height: 0px;
	z-index: -2;
	box-shadow: 0px 0px 15px 5px rgba(255, 255, 256, 1);
}

#bgImg1 {
	position: fixed;
	right: 15%;
	bottom: 0;
	min-width: 40%;
	max-width: 60%;
	height: auto;
	opacity: 0.5;
	z-index: -3;
}

#bgImg2 {
	position: fixed;
    left: 5%;
	top: 5%;
	min-width: 40%;
	max-width: 60%;
	height: auto;
	opacity: 0.5;
	z-index: -4;
}

#popupImg {
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	min-height: 100%;
	z-index: 100;
}

#simulateBtn {
	position: fixed;
	right: 0;
	top: 0;
}